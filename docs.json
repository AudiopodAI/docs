{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AudioPod AI",
  "colors": {
    "primary": "#6366F1",
    "light": "#8B5CF6",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "authentication"]
          },
          {
            "group": "Account Management",
            "pages": [
              "account/registration",
              "account/api-keys",
              "account/credits"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Authentication",
            "pages": ["api-reference/authentication"]
          },
          {
            "group": "Voice APIs",
            "pages": [
              "api-reference/text-to-speech",
              "api-reference/voice-cloning",
              "api-reference/voice-changer",
              "api-reference/voice-management"
            ]
          },
          {
            "group": "Music APIs",
            "pages": [
              "api-reference/music-generation",
              "api-reference/stem-separation",
              "api-reference/noise-reduction"
            ]
          },
          {
            "group": "Speech APIs",
            "pages": [
              "api-reference/speaker-extraction",
              "api-reference/speech-translation",
              "api-reference/speech-to-text"
            ]
          },
          {
            "group": "Utilities",
            "pages": ["api-reference/media-extraction"]
          },
          {
            "group": "Account & Credits APIs",
            "pages": ["api-reference/account", "api-reference/credits"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "AudioPod AI",
          "href": "https://www.audiopod.ai",
          "icon": "house"
        },
        {
          "anchor": "API Playground",
          "href": "https://api.audiopod.ai/api/v1/docs",
          "icon": "code"
        },
        {
          "anchor": "Discord Community",
          "href": "https://discord.gg/audiopod",
          "icon": "discord"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@audiopod.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png",
    "href": "https://www.audiopod.ai"
  },
  "navbar": {
    "links": [
      {
        "label": "Manage Account",
        "href": "https://www.audiopod.ai/dashboard/account"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://www.audiopod.ai/dashboard/account/api-keys"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/audiopodai",
      "github": "https://github.com/audiopod-ai",
      "linkedin": "https://linkedin.com/company/audiopod-ai"
    }
  }
}
