{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AudioPod AI",
  "colors": {
    "primary": "#6366F1",
    "light": "#8B5CF6",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": ["index", "quickstart"]
          },
          {
            "group": "Account",
            "icon": "user",
            "pages": ["account/api-keys", "account/api-wallet"]
          }
        ]
      },
      {
        "tab": "SDKs",
        "groups": [
          {
            "group": "Official SDKs",
            "icon": "code",
            "pages": ["sdks/overview", "sdks/python", "sdks/nodejs"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Audio Processing",
            "icon": "waveform",
            "pages": [
              "api-reference/stem-splitter",
              "api-reference/noise-reduction",
              "api-reference/speaker-separation"
            ]
          },
          {
            "group": "Speech",
            "icon": "microphone",
            "pages": [
              "api-reference/speech-to-text",
              "api-reference/text-to-speech",
              "api-reference/ai-dubbing"
            ]
          },
          {
            "group": "Voice",
            "icon": "user-voice",
            "pages": [
              "api-reference/voice-management",
              "api-reference/voice-changer"
            ]
          },
          {
            "group": "Music",
            "icon": "music",
            "pages": ["api-reference/music-generation"]
          },
          {
            "group": "Utilities",
            "icon": "gear",
            "pages": [
              "api-reference/media-extraction",
              "api-reference/auth",
              "api-reference/account"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "AudioPod AI",
          "href": "https://www.audiopod.ai",
          "icon": "house"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@audiopod.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png",
    "href": "https://www.audiopod.ai"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://www.audiopod.ai/dashboard/account"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://www.audiopod.ai/dashboard/account/api-keys"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "cursor",
      "vscode"
    ]
  },
  "codeBlock": {
    "showLineNumbers": false
  },
  "api": {
    "baseUrl": "https://api.audiopod.ai/api/v1",
    "playground": {
      "mode": "show"
    }
  },
  "openapi": "/api-reference/openapi.json",
  "feedback": {
    "thumbsRating": true,
    "raiseIssue": true,
    "suggestEdit": true
  },
  "seo": {
    "indexHiddenPages": false
  },
  "search": {
    "prompt": "Search docs..."
  },
  "footer": {
    "socials": {
      "x": "https://x.com/audiopodai",
      "github": "https://github.com/audiopod-ai",
      "linkedin": "https://linkedin.com/company/audiopod-ai"
    }
  }
}
